@model QuotationSystem.Models.Quotation

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Quotation @Model.QuotationId</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            line-height: 1.4;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            background: linear-gradient(135deg, #e67e22, #d35400);
            color: white;
            padding: 20px;
            text-align: center;
            margin-bottom: 20px;
            border-radius: 8px;
        }

        .logo-section {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
        }

        .logo {
            width: 60px;
            height: 60px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-weight: bold;
            color: #e67e22;
            font-size: 18px;
        }

        .school-info h1 {
            font-size: 24px;
            margin-bottom: 5px;
        }

        .school-info p {
            font-size: 14px;
            opacity: 0.9;
        }

        .quotation-header {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .quotation-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .quotation-title {
            font-size: 28px;
            color: #2c3e50;
            font-weight: bold;
        }

        .quotation-id {
            background: #e67e22;
            color: white;
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: bold;
        }

        .company-details {
            background: white;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #ddd;
            margin-bottom: 20px;
        }

        .detail-row {
            display: flex;
            margin-bottom: 10px;
        }

        .detail-label {
            font-weight: bold;
            width: 150px;
            color: #2c3e50;
        }

        .detail-value {
            flex: 1;
        }

        .courses-section {
            margin-bottom: 20px;
        }

        .section-title {
            background: #e67e22;
            color: white;
            padding: 12px 20px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 8px 8px 0 0;
            margin-bottom: 0;
        }

        .courses-table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

            .courses-table th {
                background: #34495e;
                color: white;
                padding: 12px 8px;
                text-align: center;
                font-weight: bold;
                font-size: 11px;
            }

            .courses-table td {
                padding: 10px 8px;
                text-align: center;
                border-bottom: 1px solid #ddd;
                font-size: 11px;
            }

            .courses-table tbody tr:nth-child(even) {
                background: #f8f9fa;
            }

            .courses-table tbody tr:hover {
                background: #e8f4fd;
            }

        .vehicle-badge {
            background: #6c757d;
            color: white;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 10px;
            font-weight: bold;
        }

        .course-type-badge {
            background: #17a2b8;
            color: white;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 10px;
            font-weight: bold;
        }

        .price-cell {
            font-weight: bold;
            color: #e67e22;
        }

        .custom-price {
            background: #fff3cd;
            color: #856404;
            padding: 2px 6px;
            border-radius: 10px;
            font-size: 9px;
            font-weight: bold;
        }

        .default-price {
            background: #d4edda;
            color: #155724;
            padding: 2px 6px;
            border-radius: 10px;
            font-size: 9px;
            font-weight: bold;
        }

        .total-row {
            background: #2c3e50 !important;
            color: white !important;
            font-weight: bold;
        }

            .total-row td {
                font-size: 12px !important;
                padding: 15px 8px !important;
            }

        .notes-section {
            background: #fff3cd;
            padding: 15px;
            border-radius: 8px;
            border-left: 4px solid #ffc107;
            margin-bottom: 20px;
        }

        .notes-title {
            font-weight: bold;
            color: #856404;
            margin-bottom: 10px;
            font-size: 14px;
        }

        .notes-content {
            color: #856404;
            line-height: 1.6;
        }

        .footer {
            text-align: center;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
            margin-top: 30px;
        }

        .signature-section {
            display: flex;
            justify-content: space-between;
            margin-top: 40px;
            padding-top: 20px;
        }

        .signature-box {
            text-align: center;
            width: 200px;
        }

        .signature-line {
            border-top: 2px solid #333;
            margin-bottom: 5px;
        }

        .thank-you {
            font-size: 18px;
            color: #e67e22;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .date-section {
            text-align: right;
            margin-bottom: 20px;
            font-size: 11px;
            color: #666;
        }


    </style>
</head>
<body>
    <div class="container">
        <!-- Header Section -->
        <div class="header">
            <div class="logo-section">
                <div class="logo">AR</div>
                <div class="school-info">
                    <h1>AL RAYAH DRIVING SCHOOL</h1>
                    <p>Professional Driving Training Services</p>
                </div>
            </div>
        </div>

        <!-- Date Section -->
        <div class="date-section">
            <strong>Date:</strong> @DateTime.Now.ToString("dd/MM/yyyy")<br>
            <strong>Quotation No:</strong> 908-2025-004
        </div>

        <!-- Quotation Header -->
        <div class="quotation-header">
            <div class="quotation-info">
                <div class="quotation-title">QUOTATION</div>
                <div class="quotation-id">#@Model.QuotationId</div>
            </div>
        </div>

        <!-- Company Details -->
        <div class="company-details">
            <div class="detail-row">
                <div class="detail-label">Quotation For:</div>
                <div class="detail-value">@Model.CompanyName</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Company Name:</div>
                <div class="detail-value">@Model.CompanyName</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Contact Number:</div>
                <div class="detail-value">@Model.ContactDetails</div>
            </div>
            <div class="detail-row">
                <div class="detail-label">Contact Person:</div>
                <div class="detail-value">@(Model.User?.Name ?? "N/A")</div>
            </div>
        </div>

        <!-- Courses Table -->
        <div class="courses-section">
            <div class="section-title">Course Details & Pricing</div>
            <table class="courses-table">
                <thead>
                    <tr>
                        <th style="width: 5%;">✓</th>
                        <th style="width: 20%;">License Type</th>
                        <th style="width: 15%;">Vehicles</th>
                        <th style="width: 15%;">Course Type</th>
                        <th style="width: 15%;">Course Price</th>
                        <th style="width: 15%;">Full Course</th>
                        <th style="width: 15%;">Half Course</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var qc in Model.QuotationCourses)
                    {
                        var actualFullPrice = qc.QuotationCoursePrice?.FullCoursePrice ?? qc.CourseOption.FullCoursePrice;
                        var actualHalfPrice = qc.QuotationCoursePrice?.HalfCoursePrice ?? qc.CourseOption.HalfCoursePrice;
                        var isCustomPrice = qc.QuotationCoursePrice?.IsCustomPrice ?? false;

                        <tr>
                            <td>
                                <div style="background: #28a745; color: white; width: 20px; height: 20px; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; font-size: 10px;">✓</div>
                            </td>
                            <td style="text-align: left; font-weight: bold;">@qc.CourseOption.Course.CourseName</td>
                            <td>
                                <div style="display: flex; justify-content: center; align-items: center;">
                                    @if (qc.CourseOption.Course.VehicleType.ToLower().Contains("light"))
                                    {
                                        <span>🚗</span>
                                    }
                                    else if (qc.CourseOption.Course.VehicleType.ToLower().Contains("motorcycle"))
                                    {
                                        <span>🏍️</span>
                                    }
                                    else if (qc.CourseOption.Course.VehicleType.ToLower().Contains("bus"))
                                    {
                                        <span>🚌</span>
                                    }
                                    else if (qc.CourseOption.Course.VehicleType.ToLower().Contains("truck"))
                                    {
                                        <span>🚛</span>
                                    }
                                    else
                                    {
                                        <span>🚗</span>
                                    }
                                </div>
                                <div class="vehicle-badge">@qc.CourseOption.Course.VehicleType</div>
                            </td>
                            <td>
                                <div class="course-type-badge">@qc.CourseOption.CourseType.TypeName Course</div>
                                <div style="font-size: 10px; color: #666; margin-top: 2px;">Normal Course</div>
                            </td>
                            <td>
                                @if (isCustomPrice)
                                {
                                    <span class="custom-price">Custom Price</span>
                                }
                                else
                                {
                                    <span class="default-price">Standard Price</span>
                                }
                            </td>
                            <td class="price-cell">QR @actualFullPrice.ToString("N0")</td>
                            <td class="price-cell">QR @actualHalfPrice.ToString("N0")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="total-row">
                        <td colspan="5"><strong>TOTAL</strong></td>
                        <td class="price-cell"><strong>QR @Model.QuotationCourses.Sum(qc => qc.QuotationCoursePrice?.FullCoursePrice ?? qc.CourseOption.FullCoursePrice).ToString("N0")</strong></td>
                        <td class="price-cell"><strong>QR @Model.QuotationCourses.Sum(qc => qc.QuotationCoursePrice?.HalfCoursePrice ?? qc.CourseOption.HalfCoursePrice).ToString("N0")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <!-- Special Notes Section -->
        <div class="notes-section">
            <div class="notes-title">SPECIAL NOTES AND INSTRUCTIONS</div>
            <div class="notes-content">
                <p><strong>Signal, Theory, Computer Class:</strong> 350 QR</p>
                <p><strong>Test Fees:</strong> 50 QR</p>
                <p><strong>Eye Test:</strong> 50 QR</p>
                <br>
                <p><strong>Note:</strong> Above information is not an invoice and only an estimate of services described above.</p>
                <p><strong>Payment:</strong> Will be collected in prior to provision of services described in this quote.</p>
            </div>
        </div>

        <!-- Signature Section -->
        <div class="signature-section">
            <div class="signature-box">
                <div class="signature-line"></div>
                <p><strong>Signature</strong></p>
            </div>
            <div class="signature-box">
                <div class="signature-line"></div>
                <p><strong>Name</strong></p>
            </div>
            <div class="signature-box">
                <div class="signature-line"></div>
                <p><strong>Date</strong></p>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer">
            <div class="thank-you">Thank you for your Business!</div>
            <p>Please confirm your acceptance of this quote by signing above and return this document.</p>
            <p style="margin-top: 10px; font-size: 11px; color: #666;">
                <strong>Status:</strong> @Model.Status |
                <strong>Created:</strong> @Model.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")
            </p>
        </div>
    </div>
</body>
</html>